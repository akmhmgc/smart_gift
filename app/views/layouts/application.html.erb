<!DOCTYPE html>
<html>
<head>
  <title>SmartGift</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag "application", "data-turbo-track": "reload" %>
</head>

<body class="text-gray-700 box-border max-w-full">
  <%= render 'layouts/header' %>
  <div class="pt-24 relative" id="container">
    <div class="mt-24 fade absolute top-0 left-0 right-0 mx-auto w-3/4 text-sm delay-1000 z-10">
      <% if flash[:notice] %>
      <div class="text-white px-6 py-4 border-0 rounded mb-4 bg-blue-400">
        <span class="inline-block align-middle mr-8">
          <%= notice %>
        </span>
      </div>
      <% elsif  flash[:alert]%>
      <div class="text-white px-6 py-4 border-0 rounded mb-4 bg-red-400">
        <span class="inline-block align-middle mr-8">
          <%= alert %>
        </span>
      </div>
      <% end %>
    </div>
    <%= yield %>
    <div class="text-left hidden md:inline-block">
      <%= debug(params) if Rails.env.development?%>
    </div>
  </div>
</body>

</html>