<!DOCTYPE html>
<html>

<head>
  <title>SmartGift</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag "application", "data-turbo-track": "reload" %>
</head>

<body class="text-gray-700">
  <%= render 'layouts/header' %>
  <div class="max-w-screen-lg mx-auto mt-10 my-12 px-4 md:px-12 relative" id="container">
    <div class="fade absolute top-0 left-0 right-0 mx-auto w-3/4 text-sm delay-1000">
      <% if flash[:notice] %>
      <div class="text-white px-6 py-4 border-0 rounded mb-4 bg-blue-400">
        <span class="inline-block align-middle mr-8">
          <%= notice %>
        </span>
      </div>
      <% elsif  flash[:alert]%>
      <div class="text-white px-6 py-4 border-0 rounded mb-4 bg-red-400">
        <span class="inline-block align-middle mr-8">
          <%= alert %>
        </span>
      </div>
      <% end %>
    </div>
    <%= yield %>
    <div class="text-left">
      <%= debug(params) if Rails.env.development?%>
    </div>
  </div>
</body>

</html>