<header class="bg-white py-3 shadow-lg">
    <div id="navArea">
        <nav class="sidebar">
            <div class="inner">
                <ul>
                    <% if store_signed_in? && !user_signed_in?%>
                    <%= render 'layouts/shared/store_logged_in/sidebar' %>
                    <% elsif user_signed_in? && !store_signed_in?%>
                    <%= render 'layouts/shared/user_logged_in/sidebar' %>
                    <% else %>
                    <%= render 'layouts/shared/logged_out/sidebar' %>
                    <% end %>
                </ul>
            </div>
        </nav>
        <div id="mask"></div>
    </div>
    <div class="w-4/5 mx-auto flex items-center justify-between">
        <%= link_to image_tag("logo.png", alt: "Rails logo",class: "object-cover h-14 w-36"),root_path, class: "inline-block"%>
        <%# object-cover h-24 w-48  %>
        <ul class="flex text-gray-500">
            <% if store_signed_in? %>
            <li class="mr-6 hidden md:inline-block">
                <%= link_to current_store.storename, current_store ,class: "inline-block hover:text-gray-800"%>
            </li>
            <li class="mr-6">
                <a href="#"><i class="fas fa-bell fa-lg"></i></a>
            </li>
            <% else %>
            <li class="mr-6 hidden md:inline-block">
                <%= link_to "ログイン", new_user_session_path, class: "inline-block hover:text-gray-800"%>
            </li>
            <li class="mr-6 hidden md:inline-block">
                <%= link_to "新規会員登録", new_user_registration_path ,class: "inline-block hover:text-gray-800"%>
            </li>
            <li class="mr-6 hidden md:inline-block">
                <%= link_to "簡単ログイン(ユーザー)", "#", class: "inline-block hover:text-gray-800"%>
            </li>
            <% end %>
            <li>
                <div class="tham tham-e-squeeze tham-w-6 inline-block">
                    <div class="tham-box">
                        <div class="tham-inner bg-gray-500" />
                    </div>
                </div>
            </li>
        </ul>
    </div>
</header>