        <!-- Column -->
        <div class="my-1 px-1 w-1/3 md:w-1/4 lg:my-4 lg:px-1 lg:w-1/5 mb-10 mt-2 product">
            <%= link_to product , class:"hover:opacity-70 inline-block" do%>
            <%= image_tag(product.display_image, class: "block h-auto w-full") %>
            <h2 class="mt-2">
                <%= product.name %>
            </h2>
            <% end %>
            <% if product.reviews_count > 0 %>
            <div class="Stars" style="--rating: <%= product.stars_average %>;"
                aria-label="Rating of this product is <%= product.stars_average %> out of 5."></div>
            <span><%= "(#{product.reviews_count})" %></span>
            <% end %>
            <p class="text-md font-semibold">
                <%= "#{product.price}å††"%>
            </p>
            <%= link_to store_url(product.store),class:"text-blue-400 hover:text-blue-300 hover:underline" do %>
            <p class="text-sm">
                <%= product.store.storename %>
            </p>
            <% end %>
            <% if user_signed_in? %>
            <div id="like_form-<%= product.id %>">
                <% if current_user.like?(product) %>
                <%= render 'users/unlike', product: product %>
                <% else %>
                <%= render 'users/like' , product: product %>
                <% end %>
            </div>
            <% end %>
        </div>