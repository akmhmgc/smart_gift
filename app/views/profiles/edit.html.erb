 <%= render 'shared/error_messages' , resource: @profile %>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @profile, method: :put,local: true) do |f| %>
        <%= render "devise/shared/error_messages", resource: @profile %>

        <%= f.label :ユーザー名（ニックネーム） %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :プロフィール画像 %><br />
        <%= f.file_field :image, autofocus: true%>

        <%= f.submit "更新", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>