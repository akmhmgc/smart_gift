 <%= render 'shared/error_messages' , resource: @review %>
 <%= form_with(model: @review, method: :put,local: true) do |f| %>
 <div class="field">
     <%= f.hidden_field :product_id, value: @review.product.id %>
     <%= f.select :stars, "★★★★★": 5,"★★★★": 4,"★★★": 3,"★★": 2,"★": 1 %>
     <%= f.text_field :title %>
     <br>
     <%= f.text_area :body %>
 </div>
 <%= f.submit "更新", class: "" %>
 <% end %>