<%= form_with(model: @review, local: true) do |f| %>

<div class="field">
    <%= f.hidden_field :product_id, value: @product.id %>
    <%= f.text_field :title, placeholder: "タイトル" %>
    <br>
    <%= f.text_area :body, placeholder: "レビュー内容" %>
</div>
<%= f.submit "Post", class: "btn btn-primary" %>
<% end %>