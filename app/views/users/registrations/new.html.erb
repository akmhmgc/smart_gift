<div class="form">
  <h2 class="title">会員登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, autocomplete: "ユーザーネーム（ニックネーム）" %>
    <% errors_hash(resource)[:username].each do |error_msg| %>
    <p class="text-xs text-red-500"><%= error_msg %></p>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <% errors_hash(resource)[:email].each do |error_msg| %>
    <p class="text-xs text-red-500"><%= error_msg %></p>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <span class="text-sm">(<%= @minimum_password_length %> 文字以上で入力)</span>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% errors_hash(resource)[:password].each do |error_msg| %>
    <p class="text-xs text-red-500"><%= error_msg %></p>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <% errors_hash(resource)[:password_confirmation].each do |error_msg| %>
    <p class="text-xs text-red-500"><%= error_msg %></p>
    <% end %>
  </div>
  <div class="links">
    <%= render "users/shared/links" %>
  </div>
  <div class="actions">
    <%= f.submit "新規登録する" %>
  </div>
  <% end %>
</div>