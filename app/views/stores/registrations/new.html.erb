<div class="form">
  <h2 class="title">店舗登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "stores/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :storename %>
    <%= f.text_field :storename, autofocus: true, autocomplete: "店舗名" %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, autocomplete: "店舗の説明を入力してください" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email,autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <span class="text-sm">(<%= @minimum_password_length %> 文字以上で入力)</span>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="links">
    <%= render "stores/shared/links" %>
  </div>
  <div class="actions">
    <%= f.submit "新規登録する" %>
  </div>
  <% end %>
</div>